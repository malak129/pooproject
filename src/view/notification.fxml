<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400" prefWidth="600" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="view.NotificationController">

    <children>
        <ScrollPane  fitToWidth="true">
            <content>
             
                <VBox fx:id="notificationList" spacing="10" style="-fx-padding: 10;" prefHeight="1000" prefWidth="1030" >
                   <Text fx:id="notificationText" style="-fx-fill: red; -fx-font-weight: bold;" />
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
